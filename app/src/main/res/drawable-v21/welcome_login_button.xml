<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#77995566"
                android:startColor="#77995566"/>
            <corners android:radius="28dp" />
        </shape>
    </item>
    <item>
        <ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
            android:color="#997777"
            tools:targetApi="lollipop">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="#997777" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>